<h2>Editing Book</h2>
<%= form_with model:@book, local:true do |f| %>
  
  <label for="inputTitle">Title</label>
  <%= f.text_field :title, autofocus: true, id:"inputTitle", placeholder:"題名"%>
  
  <label for="inputOpinion">Opinion</label>
  <%= f.text_field :opinion, autofocus: true, id:"inputOpinion", placeholder:"意見"%>
  
  <%= f.submit "Update Book" %>
  
  <%= link_to "Show", book_path(@book) %>
  <%= link_to "Back", books_path(@book) %>
  
<% end %>