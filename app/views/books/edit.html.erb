<main>
<p id="notice"><%= flash[:notice] %></p>

<div class="container">
  <div class="row">
  <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
  
    
<h1>Editing Book</h1>
<%= form_with model:@book, local:true do |f| %>
 <div>
  <div class="form-group">
  <label for="inputTitle">Title</label>
  <div class="form-controll"><%= f.text_field :title, autofocus: true, id:"inputTitle"%></div>
  </div>
  <div class="form-group">
  <label for="inputOpinion">Opinion</label>
  <div class="form-controll"><%= f.text_field :opinion, autofocus: true, id:"inputOpinion" %></div>
  </div>
  <div class="form-group btn btn-success">
  <%= f.submit "Update Book" %>
  </div>
  
 </div>
  
  <%= link_to "Show", book_path(@book) %>
  |
  <%= link_to "Back", books_path(@book) %>
  
<% end %>
</div>
</div>
</div>
</main>