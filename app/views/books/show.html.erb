<main>
  <p id="notice"><%= flash[:notice] %></p>
<div class='container px-5 px-sm-0'>
  
  <%= render 'layouts/userinfo' %>

<div class='col-md-8 offset-md-1'>
        <h2>Book detail</h2>
        <table class='table'>
          
          <tbody>
            
            
            <tr>
              <td>
                <%= link_to attachment_image_tag(@user, :profile_image, :fill, 70, 70, format: 'jpeg', fallback: "default-image.jpg"), user_path(@user) %>
              <br><%= link_to @book.user.name, user_path(@user) %>
              </td>
              
              <td><%= link_to @book.title, book_path(@book) %></td>
              
              <td><%= @book.body %></td>
              
              <% if @book.user == current_user %>
              <td><div class="btn btn-sm btn-success"><%= link_to "Edit", edit_book_path(@book) %></div></td>
              <td><div class="btn btn-sm btn-danger"><%= link_to "Destroy", book_path(@book), method: :delete %></div></td>
              <% else %>
              <td></td>
              <td></td>
              <% end %>
              
              
              
            </tr>
            
            
            
            
          </tbody>
        </table>
        </div>
        </div>
        </div>
        </main>
      