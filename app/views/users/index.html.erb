<main>
  <div class='container px-5 px-sm-0'>
  <%= render 'layouts/userinfo'%>


 <div class='col-md-8 offset-md-1'>
        <h2>Users</h2>
        <table class='table table-hover table-inverse'>
          <thead>
            <tr>
              <th></th>
              <th>image</th>
              <th>name</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            
            
            <tr>
              <%= @users.each do |user| %>
              <td><%= attachment_image_tag user, :profile_image %></td>
              <td><%= user.name %></td>
              <td><%= link_to "Show", user_path(current_user.id) %></td>
              <% end %>
            </tr>
            
            
            
            
          </tbody>
        </table>
      </div>
  
  </main>    